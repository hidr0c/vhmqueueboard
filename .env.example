# Copy file này thành .env để chạy local
# cp .env.example .env

# Database URL cho SQLite (Local Development)
DATABASE_URL="file:./dev.db"

# Cho production với PostgreSQL trên Vercel:
# DATABASE_URL sẽ được Vercel tự động set
# POSTGRES_PRISMA_URL="postgres://..."
# POSTGRES_URL_NON_POOLING="postgres://..."

# Pusher Configuration (Required for Real-time Sync)
# Sign up at https://pusher.com and create a Channels app
# Free tier: 200k messages/day, 100 concurrent connections

# Server-side (Keep these secret!)
PUSHER_APP_ID="your_app_id"
PUSHER_SECRET="your_secret_key"

# Client-side (Safe to expose)
NEXT_PUBLIC_PUSHER_KEY="your_pusher_key"
NEXT_PUBLIC_PUSHER_CLUSTER="your_cluster"  # e.g., "ap1" for Asia Pacific
